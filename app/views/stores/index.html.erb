<p style="color: green; text-align: center; margin-bottom: 20px;"><%= notice %></p>

<h1 style="text-align: center; margin-bottom: 20px;">Stores</h1>

<div id="stores" style="display: flex; flex-wrap: wrap; justify-content: center;">
  <% @stores.each do |store| %>
    <div style="margin: 10px; padding: 20px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9; width: 300px;">
      <%= render store %>
      <p style="text-align: center; margin-top: 10px;">
        <%= link_to "Show this product", store, style: "color: #007bff; text-decoration: none;" %>
      </p>
    </div>
  <% end %>
</div>


<div style="text-align: center; margin-top: 20px;">
  <%= button_to "Add new Product", new_store_path, method: :get, class: "btn btn-primary" %>
</div>
